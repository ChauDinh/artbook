<h6>Dashboard</h6>

<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>

{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/api/v1/stories/{{_id}}">{{title}}</a></td>
      <td>{{formatDate createdAt "MMM Do YYYY, h:mm:ss a"}}</td>
      <td><span class="dash-status">{{status}}</span></td>
      <td>
        <a href="/api/v1/stories/edit/{{_id}}" class="btn btn-float">
          <i class="fas fa-edit"></i>
        </a>

        <form action="/api/v1/stories/delete/{{_id}}" method="POST" id="delete-form">
          <input type="hidden" name="_method" value="DELETE" />
          <button class="btn red" type="submit">
            <i class="fas fa-trash"></i>
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You don't have any stories</p>
{{/if}}